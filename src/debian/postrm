#! /bin/sh
# postrm script for nesto-usbproxy

set -e

case "$1" in
    remove)
        sed '/dtoverlay=dwc2/d' /boot/config.txt > /boot/config.txt.bak
        sed '/dwc2/d' /etc/modules > /etc/modules.bak
        mv /etc/modules.bak /etc/modules
        mv /boot/config.txt.bak /boot/config.txt
        echo "Successfully set USB c to host mode again."
    ;;

    purge|upgrade|failed-upgrade|disappear|abort-install|abort-upgrade)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0