    "version": "0.2.0",
    "configurations": [
        {
            "name": "Install + Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/build/tools/usb-mitm",
            "args": [
                "-v", "045e", "-p", "07f8", "-n"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "${workspaceFolder}/gdb_sudo.sh",
            "preLaunchTask": "install",
        },
        {
            "name": "All",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/build/tools/usb-mitm",
            "args": [
                "-v", "045e", "-p", "07f8", "-n"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "${workspaceFolder}/gdb_sudo.sh",
            "preLaunchTask": "all",
        }
    ]
}